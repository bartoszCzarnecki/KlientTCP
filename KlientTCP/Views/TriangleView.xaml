<UserControl x:Class="KlientTCP.Views.TriangleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlientTCP.Views"
             Background="#333"
             Foreground="#fff"
             FontSize="20"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Margin="5">Check Triangle Type</TextBlock>
            <TextBox Margin="5" Text="a" x:Name="A" />
            <TextBox Margin="5" Text="b" x:Name="B"/>
            <TextBox Margin="5" Text="c" x:Name="C"/>
            <Button  Margin="5" x:Name="HandleButtonClick">Submit</Button>
        </StackPanel>
    </Grid>
</UserControl>
