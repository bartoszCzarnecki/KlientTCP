<UserControl x:Class="KlientTCP.Views.DeleteAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlientTCP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Margin="20">
        <TextBlock Margin="5" FontSize="30">Delete your account?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="HandleYesButtonClick" Margin="5" FontSize="25" Width="100">Yes</Button>
            <Button x:Name="HandleNoButtonClick" Margin="5" FontSize="25" Width="100">No</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
